
# PYTHONPATH must include directory above plugin directory.
#     Define either externally or here, then import plugin.
sys.path.insert(0, './..')
import mydft

molecule h2o_cation { 
1 2
O
H 1 R
H 1 R 2 A
R = 0.9
A = 104.5
symmetry c1
}

set {
  guess sad
  scf_type df
  basis sto-3g
  e_convergence 12
  d_convergence 12
  reference uks
}
set mydft {
  diis true
  functional pbe
}

# psi4's dft
en,wfn = energy('pbe',return_wfn=True)

# my dft plugin
# still requires reference wave function ... something wrong with initialization of empty ref_wfn in pymodule.py
energy('mydft',ref_wfn=wfn)

mydft.exampleFN()
